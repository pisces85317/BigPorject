@model BigPorject.Controllers.DocLoad
<div class="productList">
    @* Breadcrumb 麵包屑 *@
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
        </ol>
    </nav>
    <div class="container">
        <div class="row">
            @* Sidebar 側邊欄 *@
            <div class="col-3">
                <div class="accordion" id="accordionSidebar">
                    <div class="accordion-item">
                        <a class="accordion-header accordion-button">所有商品</a>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingOne">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">產地</button>
                        </h2>
                        <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionSidebar">
                            <div class="accordion-body">
                                @foreach (string c in Model.Country!)
                                {
                                    <a>@c</a>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingTwo">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">風味</button>
                        </h2>
                        <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionSidebar">
                            <div class="accordion-body">
                                @foreach (string f in Model.Flavor!)
                                {
                                    <a>@f</a>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <a class="accordion-header accordion-button">濾掛系列</a>
                    </div>
                </div>
            </div>
            <div class="col-9">
                @* 數量和排序 *@
                <div class="ItemSort row">
                    @* 數量 *@
                    <div class="col">
                        @Model.Products!.Count() 項
                    </div>
                    @* Dropdown 排序 *@
                    <div class="col-auto">
                        <div class="d-inline-flex">
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle"
                                        type="button"
                                        id="dropdownMenuButtonPriceSort"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                    排序
                                </button>
                                <ul class="dropdown-menu priceSort" aria-labelledby="dropdownMenuButtonPriceSort">
                                    <li class="dropdown-item">綜合</li>
                                    <li class="dropdown-item">價格:由低到高</li>
                                    <li class="dropdown-item">價格:由高到低</li>
                                </ul>
                            </div>
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle"
                                        type="button"
                                        id="dropdownMenuButtonItemShow"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                    每頁顯示
                                </button>
                                <ul class="dropdown-menu itemShow" aria-labelledby="dropdownMenuButtonItemShow">
                                    <li class="dropdown-item f-show-item" data-num="12">每頁顯示12個</li>
                                    <li class="dropdown-item f-show-item" data-num="18">每頁顯示18個</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                @* Dropdown 篩選 *@
                <div class="filter row">
                    <div class="col-auto">
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle"
                                    type="button"
                                    id="dropdownMenuButtonPrice"
                                    data-bs-toggle="dropdown"
                                    data-bs-auto-close="outside"
                                    aria-expanded="false">
                                價格
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButtonPrice">
                                <div class="dropdown-item" style="display:flex;justify-content:right">
                                    <button type="button" class="btn-close" aria-label="Close" onclick="filterBtnClose(this)"></button>
                                </div>
                                <div class="dropdown-item filterPriceItem">
                                    <input type="number" name="min" placeholder="最小值" />
                                    <span> - </span>
                                    <input type="number" name="max" placeholder="最大值" />
                                    <input type="submit" value="Go" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle"
                                    type="button"
                                    id="dropdownMenuButtonBaking"
                                    data-bs-toggle="dropdown"
                                    data-bs-auto-close="outside"
                                    aria-expanded="false">
                                烘焙程度
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButtonBaking">
                                <div class="dropdown-item" style="display:flex;justify-content:right">
                                    <button type="button" class="btn-close" aria-label="Close" onclick="filterBtnClose(this)"></button>
                                </div>
                                <div class="dropdown-item filter-baking-item">
                                    @foreach (string b in Model.Baking!)
                                    {
                                        <div>
                                            <label for="@b" class="CBcontainer"><input type="checkbox" id="@b" /><span class="checkmark"></span>@b</label>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle"
                                    type="button"
                                    id="dropdownMenuButtonMethod"
                                    data-bs-toggle="dropdown"
                                    data-bs-auto-close="outside"
                                    aria-expanded="false">
                                處理法
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButtonMethod">
                                <div class="dropdown-item" style="display:flex;justify-content:right">
                                    <button type="button" class="btn-close" aria-label="Close" onclick="filterBtnClose(this)"></button>
                                </div>
                                <div class="dropdown-item filter-method-item">
                                    @foreach (string m in Model.Method!)
                                    {
                                        <div>
                                            <label for="@m" class="CBcontainer"><input type="checkbox" id="@m" /><span class="checkmark"></span>@m</label>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle"
                                    type="button"
                                    id="dropdownMenuButtonTaste"
                                    data-bs-toggle="dropdown"
                                    data-bs-auto-close="outside"
                                    aria-expanded="false">
                                味道
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButtonTaste">
                                <div class="dropdown-item" style="display:flex;justify-content:right">
                                    <button type="button" class="btn-close" aria-label="Close" onclick="filterBtnClose(this)"></button>
                                </div>
                                <div class="dropdown-item filterTasteItem">
                                    <div>
                                        香氣<input type="range" min="1" max="5" value="1" id="fragrance" /><span>1</span>
                                    </div>
                                    <div>
                                        酸味<input type="range" min="1" max="5" value="1" id="sour" /><span>1</span>
                                    </div>
                                    <div>
                                        苦味<input type="range" min="1" max="5" value="1" id="bitter" /><span>1</span>
                                    </div>
                                    <div>
                                        甜味<input type="range" min="1" max="5" value="1" id="sweet" /><span>1</span>
                                    </div>
                                    <div>
                                        厚實<input type="range" min="1" max="5" value="1" id="strong" /><span>1</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @* Card 產品卡 *@
                <div class="cardContainer">
                    <div class="row">
                        @{
                            foreach (Product p in Model.Products!)
                            {
                                <div class="col-4">
                                    <div class="card">
                                        <div class="cardImgBody">
                                            <img src="~/img/neko.png" class="card-img-top">
                                            <div>
                                                <a href="/Home/Index">
                                                    <svg xmlns="http://www.w3.org/2000/svg" fill="#464646" width="32" height="32" class="bi bi-share" viewBox="0 0 16 16">
                                                        <path d="M13.5 1a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3M11 2.5a2.5 2.5 0 1 1 .603 1.628l-6.718 3.12a2.5 2.5 0 0 1 0 1.504l6.718 3.12a2.5 2.5 0 1 1-.488.876l-6.718-3.12a2.5 2.5 0 1 1 0-3.256l6.718-3.12A2.5 2.5 0 0 1 11 2.5m-8.5 4a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3m11 5.5a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3" />
                                                    </svg>
                                                </a>
                                                <div data-id="@p.ProductId" onclick="cardBtnAdd(this)">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#464646" class="bi bi-cart" viewBox="0 0 16 16">
                                                        <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l1.313 7h8.17l1.313-7zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
                                                    </svg>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title text-center">@p.ProductName</h5>
                                            <p class="card-text text-center">NT.@p.Price</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
                @* 分頁 (Pagination) *@
                <div class="page">
                    <ul class="pageul">
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
@* 到頂部 *@
<button class="topbtn">
    <svg xmlns="http://www.w3.org/2000/svg" fill="#FFF" class="bi bi-arrow-up-short" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M8 12a.5.5 0 0 0 .5-.5V5.707l2.146 2.147a.5.5 0 0 0 .708-.708l-3-3a.5.5 0 0 0-.708 0l-3 3a.5.5 0 1 0 .708.708L7.5 5.707V11.5a.5.5 0 0 0 .5.5" />
    </svg>
</button>