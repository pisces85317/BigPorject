@* Modal 產品資訊互動視窗 *@
@model BigPorject.Models.Product
<div class="modalFixed">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" onclick="modalBtnClose(this)"></button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-6">
                            @* 產品圖 *@
                            <div class="productImg">
                                <div id="carouselExampleIndicators" class="carousel slide" data-bs-interval="false">
                                    <div class="carousel-inner">
                                        <div class="carousel-item active">
                                            <img src="@Model.Img" class="d-block w-100">
                                        </div>
                                        <div class="carousel-item">
                                            <img src="/img/product_img_1.jpg" class="d-block w-100">
                                        </div>
                                        <div class="carousel-item">
                                            <img src="/img/product_img_2.jpg" class="d-block w-100">
                                        </div>
                                    </div>
                                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                </div>
                                @* 產品縮圖 *@
                                <div class="smallImg">
                                    <div class="row">
                                        <img src="@Model.Img" class="col-4 subImg" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" aria-label="Slide 1" />
                                        <img src="/img/product_img_1.jpg" class="col-4 subImg" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2" />
                                        <img src="/img/product_img_2.jpg" class="col-4 subImg" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            @* 產品規格 *@
                            <div class="productFormat">
                                <h1>@Model.ProductName</h1>
                                <p><span>產地 : </span>@Model.Country</p>
                                <p><span>風味 : </span>@Model.Flavor</p>
                                <p><span>處理法 : </span>@Model.Method</p>
                                <p><span>烘焙程度 : </span>@Model.Baking</p>
                                <p><span>價格 : </span>NT.@Model.Price</p>
                                @* 數量 *@
                                <div class="modalUOMcomponent">
                                    @* 可在函式裡設定最大最小值 *@
                                    <button onclick="modalBtnUom(this)" name="minus">-</button>
                                    <input type="number" value="1" readonly />
                                    <button onclick="modalBtnUom(this)" name="plus">+</button>
                                </div>
                                @* 加入購物車 *@
                                <div class="modalBtn">
                                    <button class="btn btn-primary"
                                            data-id="@Model.ProductId"
                                            data-img="@Model.Img"
                                            data-name="@Model.ProductName"
                                            data-price="@Model.Price"
                                            onclick="modalBtnAdd(this)">
                                        加入購物車
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="productDesc">
                            <div class="productDescText">
                                <div>
                                    <h3>產品描述</h3>
                                </div>
                                <div>
                                    <p>@Model.Description</p>
                                </div>
                                <hr />
                                <div>
                                    <a href="#">more</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>