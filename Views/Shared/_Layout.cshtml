<!DOCTYPE html>
<html lang="zh-tw">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BigPorject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BigPorject.styles.css" asp-append-version="true" />
    @* 新增... *@
    <link href="~/css/Page.css" rel="stylesheet" />
    <link href="~/css/Breadcrumb.css" rel="stylesheet" />
    <link href="~/css/Card.css" rel="stylesheet" />
    <link href="~/css/p_CartItem.css" rel="stylesheet" />
    <link href="~/css/p_ProductModal.css" rel="stylesheet" />
    @* 新增... *@
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">咖啡專賣店</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Product">所有商品</a>
                        </li>
                    </ul>
                    @* 新增... *@
                    <div id="layout-target"></div>
                    @* 新增... *@
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div id="layout-target"></div>
        <div class="container">
            &copy; 2024 - BigPorject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @* 新增... *@
    <script src="~/js/Sub.js"></script>
    <script src="~/js/ProductIndex.js"></script>
    @* 新增... *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
